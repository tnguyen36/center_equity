<% include partials/header %>
<div class="modal-dialog register-dialog text-center">
	<div class="row">
		<div class="col-sm-12 main-section">
			<div class="modal-content">
				<div class="col-12 form-input">	
					<h2 class="form-header text-field">Please Register Below</h2>
					<form id="validate-form" action="/register" method="POST">
						<div class="form-row">
						  	<div class="form-group text-left col-sm-6 login-user">
						   		<label for="firstName" class="text-field">First Name</label>	   		
								<input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter First Name" required>			
						 	</div>
							<div class="form-group text-left col-sm-6 login-user">
								<label for="lastName" class="text-field">Last Name</label>			
							    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter Last Name" required>			
							</div>
						</div>
						<div class="form-group text-left login-email">
							<label for="email" class="text-field">Student Email</label>			
						    <input type="email" class="form-control" id="email" name="username" placeholder="Enter Email" required>			
						</div>
						<div class="form-row">
							<div class="form-group text-left col-sm-6 register-password">
								<label for="password" class="text-field">Password</label>			
							    <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>			
							</div>
							<div class="form-group text-left col-sm-6 register-password">
								<label for="password2" class="text-field">Confirm Password</label>			
							    <input type="password" class="form-control" id="password2" placeholder="Confirm Password" required>			
							</div>
						</div>
						<div class="form-group text-left">
							<label for="rank" class="text-field">Class Rank</label>			
						    <select class="form-control" id="rank" name="rank">
						  		<option value="Freshman">Freshman</option>
								<option value="Sophmore">Sophmore</option>
								<option value="Junior">Junior</option>
								<option value="Senior">Senior</option>
							</select>			
						</div>
						<div class="form-group text-left">
							<label for="reason" class="text-field">Reason for Today's Visit</label>			
						    <select class="form-control" id="reason" name="reason">
						  		<option value="CEI Resources">CEI Resources</option>
								<option value="Printing">Printing</option>
								<option value="Program Event">Program/Event</option>
								<option value="Homework/Study">Homework/Study</option>
								<option value="Leisure Activities">Leisure Activities (eat, read, take a nap, etc.)</option>
							</select>			
						</div>
						<div class="form-inline">
							<div class="form-group text-left">
								<label for="subscribe" class="text-field">Would you like to recieve our newsletters?&nbsp;&nbsp;</label>			
							    <div class="form-check form-check-inline">
					  				<input class="form-check-input" type="radio" name="subscribe" id="subscribe" value="yes" required>
									<label class="form-check-label text-field" for="subscribe">Yes</label>
								</div>
								<div class="form-check form-check-inline">
					  				<input class="form-check-input" type="radio" name="subscribe" value="no">
									<label class="form-check-label text-field" for="subscribe">No</label>
								</div>			
							</div>
						</div>
						<button class="btn btn-secondary">Register</button>
					</form>
					<h4 class="login">Already a user? <a href="/login">Login Here</a></h4>
				</div>
			</div>
		</div>
	</div>
</div>



<% include partials/footer %>