<% include partials/header %>
<div class="modal-dialog register-dialog text-center">
	<div class="row">
		<div class="col-sm-12 main-section">
			<div class="modal-content">
				<div class="col-12 form-input">	
					<h2 class="form-header text-field">Edit Account Setting</h2>
					<form id="validate-form" action="/updateUser/<%= user.resetPasswordToken %>" method="POST">
						<div class="form-row">
						  	<div class="form-group text-left col-sm-6 login-user">
						   		<label for="firstName" class="text-field">First Name</label>	   		
								<input type="text" class="form-control" id="firstName" name="firstName" placeholder="<%= user.firstName%>" required>			
						 	</div>
							<div class="form-group text-left col-sm-6 login-user">
								<label for="lastName" class="text-field">Last Name</label>			
							    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="<%= user.lastName%>" required>			
							</div>
						</div>
						<div class="form-group text-left login-email">
							<label for="email" class="text-field">Email</label>			
						    <input type="email" class="form-control" id="email" name="username" placeholder="<%= user.username %>" required>			
						</div>
						<div class="form-group text-left">
							<label for="rank" class="text-field">Member Type</label>			
						    <select class="form-control" id="rank" name="rank">
						  		<option value="Freshman">Freshman</option>
								<option value="Sophomore">Sophomore</option>
								<option value="Junior">Junior</option>
								<option value="Senior">Senior</option>
								<option value="Graduate">Graduate</option>
								<option value="Staff/Faculty">Staff/Faculty</option>
								<option value="Alumni/Community Member">Alumni/Community Member</option>
							</select>			
						</div>				
						<div class="form-inline">
							<div class="form-group text-left">
								<label for="subscribe" class="text-field">Would you like to recieve our newsletters?&nbsp;&nbsp;</label>			
							    <div class="form-check form-check-inline">
					  				<input class="form-check-input" type="radio" name="subscribe" id="subscribe" value="yes" required>
									<label class="form-check-label text-field" for="subscribe">Yes</label>
								</div>
								<div class="form-check form-check-inline">
					  				<input class="form-check-input" type="radio" name="subscribe" value="no">
									<label class="form-check-label text-field" for="subscribe">No</label>
								</div>			
							</div>
						</div>
						<button class="btn btn-secondary">Update</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
	$(document).ready(function() {
		$("#rank select").val("<%= user.rank %>");
		$("input[value=<%=user.subscribe%>]").prop("checked", true);
	});
</script>
<% include partials/footer %>